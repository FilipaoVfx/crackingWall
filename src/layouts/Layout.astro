---
import { HeaderContainer } from '../components/HeaderContainer';
import '../index.css';

interface Props {
  title: string;
  description?: string;
  image?: string;
}

const { 
  title, 
  description = "Download and explore high-quality tech wallpapers, cyberpunk art, glitch visuals, and futuristic aesthetics.",  
  image = "/og-image.webp" 
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <script async src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-1028294908787451"
     crossorigin="anonymous"></script>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <link rel="canonical" href={canonicalURL} />
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={Astro.url} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={new URL(image, Astro.url)} />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={Astro.url} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={new URL(image, Astro.url)} />

    <title>{title}</title>
  </head>
  <body>
    <!-- Header with client-side interactivity -->
    <HeaderContainer client:load />

    <main>
      <slot />
    </main>
    
    <footer class="bg-brutal-dark-deeper border-t-4 border-brutal-black py-12 px-4 text-center">
      <div class="max-w-7xl mx-auto">
        <div class="flex flex-wrap justify-center gap-6 mb-8 text-sm font-brutal font-black uppercase tracking-wider">
          <a href="/about/" class="text-gray-400 hover:text-brutal-neon-cyan transition-colors">About</a>
          <a href="/contact/" class="text-gray-400 hover:text-brutal-neon-pink transition-colors">Contact</a>
          <a href="/license" class="text-gray-400 hover:text-brutal-neon-yellow transition-colors">License</a>
          <a href="/privacy-policy" class="text-gray-400 hover:text-brutal-neon-green transition-colors">Privacy</a>
        </div>
        <div class="h-1 w-24 bg-brutal-neon-cyan mx-auto mb-6"></div>
        <p class="text-gray-500 font-mono text-xs">
          &copy; {new Date().getFullYear()} <span class="text-white">CrakingWall</span>. Protocol initialized. All rights reserved.
        </p>
      </div>
    </footer>
  </body>
</html>

<style is:global>
  body {
    margin: 0;
    padding: 0;
    min-height: 100vh;
    background: #0a0a0f;
    color: #f0f0f0;
    font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, sans-serif;
  }

  main {
    min-height: calc(100vh - 200px);
  }
</style>
